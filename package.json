{
	"name": "@fen95/ts-module-template",
	"version": "1.0.0",
	"description": "node module boilerplate",
	"engines": {
		"node": ">= 10.13 <13"
	},
	"main": "dist/main.js",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.1",
		"@commitlint/config-conventional": "^9.1.1",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@types/jest": "^26.0.7",
		"@types/node": "^14.0.27",
		"husky": "^4.2.5",
		"jest": "~26.1.0",
		"lint-staged": "^10.2.11",
		"nodemon": "^2.0.4",
		"prettier": "~2.0.5",
		"rimraf": "^3.0.2",
		"semantic-release": "^17.1.1",
		"ts-jest": "^26.1.4",
		"ts-node": "^8.10.2",
		"tslib": "~2.0.0",
		"tslint": "~6.1.2",
		"tslint-config-prettier": "1.18.0",
		"tslint-microsoft-contrib": "~6.2.0",
		"tsutils": "~3.17.1",
		"typescript": "~3.9.7"
	},
	"resolutions": {
		"dot-prop": "^5.1.1"
	},
	"files": [
		"dist",
		"package.json",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"start": "DEPLOY_ENV=local nodemon --watch 'src/**/*' -e ts --exec ts-node --log-error --files ./src/main.ts",
		"clean": "rimraf coverage build tmp",
		"build:es": "rm -rf dist/es && tsc --module es2015 --outDir dist/es",
		"build:umd": "rimraf dist && tsc --outDir dist/umd",
		"build:cjs": "rm -rf dist/cjs && tsc --module commonjs --outDir dist/cjs",
		"build": "rm -rf dist && tsc  --module commonjs --outDir dist",
		"build:watch": "tsc -w ",
		"lint": "tslint -t stylish --project \"tsconfig.json\"",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"publish": "HUSKY_SKIP_HOOKS=1 semantic-release --ci false"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git"
		],
		"branches": [
			"master",
			"next",
			{
				"name": "beta",
				"channel": "channel-beta",
				"prerelease": true
			},
			{
				"name": "alpha",
				"channel": "channel-alpha",
				"prerelease": true
			}
		]
	},
	"license": "MIT",
	"dependencies": {}
}
