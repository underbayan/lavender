{
  "name": "node-typescript-project",
  "version": "0.0.0",
  "description": "node-ts boilerplate",
  "engines": {
    "node": ">= 10.13 <11"
  },
  "main": "dist/main.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.14.17",
    "husky": "^2.3.0",
    "jest": "~24.9.0",
    "lint-staged": "^8.1.7",
    "nodemon": "^1.19.1",
    "prettier": "~1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.2.0",
    "tslint": "~5.19.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "~6.2.0",
    "tsutils": "~3.17.0",
    "typescript": "~3.6.0"
  },
  "scripts": {
    "start": "DEPLOY_ENV=local nodemon --watch 'src/**/*' -e ts --exec ts-node --log-error --files ./src/main.ts",
    "clean": "rimraf coverage build tmp",
    "build": "rimraf dist &&  tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "license": "MIT",
  "dependencies": {
    "tslib": "~1.10.0"
  }
}
